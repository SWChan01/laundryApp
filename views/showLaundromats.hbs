<div class="container">
    <ul class="result_list">
        {{#if this.0.laundromatName}}
            <h2>Select a laundromat below to place your order</h2>
        {{else}}
            <h2>Sorry! There is currently no registered laundromats in this zipcode</h2>
        {{/if}}
        {{#each this}}
            {{#if this.laundromatName}}
                <a href="laundromatPage/{{this.laundromatName}}/{{this.laundromatAddress}}"><li>{{this.laundromatName}} address:{{this.laundromatAddress}}</li></a>
            {{/if}}
        {{/each}}
        {{#each results}}
                <a href="laundromatPage/{{this.name}}/{{this.formatted_address}}"><li>{{this.name}} address:{{this.formatted_address}}</li></a>
        {{/each}}
    </ul>
</div>
